pipeline {
    agent any

    environment {
        NODE_VERSION = "22.12.0"
        PNPM_VERSION = "10.4.1"
        IMAGE_NAME = "react-app"
        CONTAINER_NAME = "react-container"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://lab.ssafy.com/s12-ai-image-sub1/S12P21D105.git'
            }
        }

        stage('Setup Node & Install Dependencies') {
            steps {
                script {
                    sh "curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash -"
                    sh "apt-get install -y nodejs"
                    sh "npm install -g pnpm@${PNPM_VERSION}"
                    sh "pnpm install"
                }
            }
        }

        stage('Build') {
            steps {
                sh 'pnpm run build'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                    sh "docker tag ${IMAGE_NAME}:latest ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                    sh "docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // âœ… ì»¨í…Œì´ë„ˆê°€ ìˆìœ¼ë©´ ì‚­ì œí•˜ê³  ìƒˆë¡œ ì‹¤í–‰
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"
                    sh "docker run -d --name ${CONTAINER_NAME} -p 80:80 ${IMAGE_NAME}:latest"
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful!'
        }
        failure {
            echo 'âŒ Deployment Failed! Debugging Info:'

            // ğŸ” ì»¨í…Œì´ë„ˆ ìƒíƒœ í™•ì¸
            sh "docker ps -a"

            // ğŸ” ì»¨í…Œì´ë„ˆ ë¡œê·¸ í™•ì¸ (ìµœì‹  100ì¤„)
            sh "docker logs --tail=100 ${CONTAINER_NAME} || true"

            // ğŸ” ì‚¬ìš© ì¤‘ì¸ í¬íŠ¸ í™•ì¸
            sh "netstat -tulnp || true"

            // ğŸ” í˜„ì¬ ì‹¤í–‰ ì¤‘ì¸ í”„ë¡œì„¸ìŠ¤ í™•ì¸
            sh "ps aux || true"
        }
    }
}
